<h1>Listing films</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Rate</th>
    <th>Duration</th>
    <th colspan="2"></th>
  </tr>
 
  <% @films.each do |film| %>
    <tr>
      <td><%= film.name %></td>
      <td><%= film.description %></td>
      <td><%= film.rate %></td>
      <td><%= film.duration %></td>
      <td><%= link_to 'Show', film_path(film) %></td>
      <td><%= link_to 'Edit', edit_film_path(film) %></td>
      <td><%= link_to 'Destroy', film_path(film),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Film', new_film_path %>
