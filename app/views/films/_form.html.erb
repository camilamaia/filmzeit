<%= form_for :film, url: films_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :rate %><br>
    <%= f.text_field :rate %>
  </p>

  <p>
    <%= f.label :duration %><br>
    <%= f.text_field :duration %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

